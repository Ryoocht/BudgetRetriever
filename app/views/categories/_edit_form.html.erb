<div class="category_table visibilityOn">
    <table class="main_category_table">
        <thead>
            <tr>
                <th>Main Category</th>
            </tr>
        </thead>
        <tbody>
            <% @category_parent_array.each do |main| %>
                <td><strong><%= main.name %></strong></td>
            <% end %>
        </tbody>
    </table>

    <table class="subcategory_table">
        <thead>
            <tr>
                <th>Subcategory</th>
            </tr>
        </thead>
        <tbody>
            <% @category_parent_array.each do |main| %>
            <tr>
                <th colspan="10"><%= main.name %></th>
                <% getChildCategories(main.id).each do |sub| %>
                <tr>
                    <th scope="rowgroup"><%= sub.name %></th>
                    <% getChildCategories(sub.id).each do |grand_child| %>
                        <th scope="row"><%= grand_child.name %></th>
                    <% end %>
                </tr>
                <% end %>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>