<div class="navigation-layout">

  <div class="user_info">
    <span class="box-title">User Name</span>
    <p class="user_name"><%= @user.name %></p>
  </div>

  <%= form_tag ({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
    <input type=submit value='logout' class="logout-btn">
  <% end %>

</div>

<%= render partial: "welcome/title_status", locals: {title: "Create / Select A Budget Table"} %>

<div class="data-layout">
  <div class="content-container">
    <div class="account_box">
      <%= form_with model: @account do |f| %>
        <p class="account-input">New Table Name</p>
        <%= f.text_field :name, class: "table-input", placeholder: "--- Table Name ---" %>
        <%= f.hidden_field :user_id, value: @user.id %>
        <%= f.submit :create, class: "account-create-btn" %>
      <% end %>
    </div>

    <div class="account_box">
      <%= form_with model: @account do |f| %>
        <p class="account-input">Select Table</p>
        <%= f.collection_select :account_id, @accounts, :id, :name, {prompt: "--- Select A Table Name"}, class: "table-input" %>
        <%= f.submit :select, class: "account-create-btn" %>
      <% end %>
    </div>
  </div>
</div>